<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenu">

    <TextView
        android:id="@+id/usernameHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:text="Username:"
        tools:text="Username:"
        android:layout_marginStart="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:typeface="monospace"
        android:textStyle="italic"
        android:text="[username]"
        android:layout_alignBottom="@+id/usernameHeader"
        android:layout_toEndOf="@+id/usernameHeader"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/appleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/usernameHeader"
        android:layout_below="@+id/usernameHeader"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:text="AppleTV:" />

    <TextView
        android:id="@+id/appleID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/appleText"
        android:layout_alignStart="@+id/userName"
        android:textColor="@android:color/background_light"
        android:textSize="22sp"
        android:typeface="monospace"
        android:textStyle="italic"
        android:text="[appleID]" />

    <Button
        android:id="@+id/nameEditButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:onClick="changeUsername"
        android:text="Change username"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:background="@drawable/custom_button2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/editAppleButton"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/nameEditButton"
        android:layout_below="@+id/nameEditButton"
        android:layout_marginTop="20dp"
        android:onClick="changeAppleID"
        android:text="Change Apple TV"
        android:typeface="monospace"
        android:textSize="15dp"
        android:background="@drawable/custom_button2"
        android:textStyle="bold" />

    <Button
        android:id="@+id/returnButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:background="@drawable/custom_button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:onClick="returnButton"
        android:text="Return" />


</RelativeLayout>