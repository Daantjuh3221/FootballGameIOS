<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/footballfield">

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:onClick="selectSettings"
        android:text="Settings"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/startgameButton"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:onClick="playLocal"
        android:text="Start game"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_below="@+id/lblJoinCode"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/lblJoinedWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/lblJoinCode"
        android:layout_marginTop="14dp"
        android:text="You are joined with:"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="@android:color/background_light" />

    <TextView
        android:id="@+id/lblJoinCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:text="AppleTVCode"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/lblJoinedWith"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lblJoinedStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not defined"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/lblJoinCode"
        android:layout_alignStart="@+id/lblJoinCode" />

    <ImageView
        android:id="@+id/imgRefreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_refresh_black_24dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/lblJoinedStatus"
        android:layout_alignStart="@+id/lblJoinedStatus" />


</RelativeLayout>