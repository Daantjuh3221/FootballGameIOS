<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenu">

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:onClick="selectSettings"
        android:text="Settings"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/startgameButton"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="30dp"
        android:background="@drawable/custom_button2"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/startgameButton"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:onClick="playLocal"
        android:text="Start game"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:background="@drawable/custom_button"
        android:layout_alignBaseline="@+id/usernameHeader"
        android:layout_alignStart="@+id/settingsButton" />

    <ImageView
        android:id="@+id/userimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/lblJoinedWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_marginTop="30dp"
        android:text="Player"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="@android:color/background_light"
        android:layout_toEndOf="@+id/userimg" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFF00"
        android:typeface="monospace"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:layout_alignStart="@+id/lblJoinedWith"
        android:layout_below="@+id/lblJoinedWith"
        android:text="Username" />

    <ImageView
        android:id="@+id/appleimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userimg"
        android:layout_toStartOf="@+id/lblJoinCode"
        app:srcCompat="@drawable/apple" />

    <TextView
        android:id="@+id/appletvheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:typeface="monospace"
        android:text="Apple TV"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_below="@+id/userimg"
        android:layout_toEndOf="@+id/userimg" />

    <TextView
        android:id="@+id/lblJoinCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:text="AppleTVCode"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="#FFFF00"
        android:layout_alignStart="@+id/lblJoinedWith"
        android:layout_below="@+id/appletvheader" />

    <TextView
        android:id="@+id/lblJoinedStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:typeface="monospace"
        android:text="Not defined"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/serverstatus"
        android:layout_alignStart="@+id/serverstatus" />

    <ImageView
        android:id="@+id/imgRefreshButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_refresh_black_24dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/lblJoinedStatus"
        android:layout_alignStart="@+id/serverstatus" />


    <ImageView
        android:id="@+id/serverimg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appleimg"
        android:layout_toStartOf="@+id/lblJoinCode"
        app:srcCompat="@drawable/server" />

    <TextView
        android:id="@+id/serverstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:typeface="monospace"
        android:textStyle="bold"
        android:layout_below="@+id/appleimg"
        android:layout_toEndOf="@+id/serverimg"
        android:text="Server" />


</RelativeLayout>